---
import { getLangFromURL, useTranslations } from 'src/i18n'

interface Props {
	title: string;
}

const { title } = Astro.props
const lang = getLangFromURL(Astro.url)
const t = useTranslations(lang)
const url = 'https://brau.dev'
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- HTML Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={t('section.hero.about-me.2')}>

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content={url}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}>
		<meta property="og:description" content={t('section.hero.about-me.2')}>
		<meta property="og:image" content={url + '/hero-banner.webp'}>

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="brau.dev">
		<meta property="twitter:url" content={url}>
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={t('section.hero.about-me.2')}>
		<meta name="twitter:image" content={url + '/hero-banner.webp'}>
	</head>
	<body class="overflow-x-hidden bg-gray-50 text-gray-800 transition-colors dark:bg-gray-800 dark:text-gray-50">
		<div class="heropattern-bubbles-inherit/10">
			<slot />
		</div>
	</body>
</html>

<script>
	import { themeSwitcher } from "src/utils/theme-switcher.ts"

	window.addEventListener('load', () => {
		themeSwitcher()
	})
</script>
