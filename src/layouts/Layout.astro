---
// import "patter.css/dist/pattern.min.css"
import { getLangFromURL } from 'src/i18n'

interface Props {
	title: string;
}

const { title } = Astro.props
const lang = getLangFromURL(Astro.url)
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="overflow-x-hidden bg-gray-50 text-gray-800 transition-colors dark:bg-gray-800 dark:text-gray-50">
		<div class="heropattern-bubbles-inherit/10">
			<slot />
		</div>
	</body>
</html>

<script>
	import { themeSwitcher } from "src/utils/theme-switcher.ts"

	window.addEventListener('load', () => {
		themeSwitcher()
	})
</script>
